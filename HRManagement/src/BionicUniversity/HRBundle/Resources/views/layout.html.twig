<!DOCTYPE html>
<html>
    <head>
        <title>
            {% block title %}
                HRManagement - Your chance to be better
            {% endblock %}
        </title>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('bundles/bionicuniversityhr/css/main.css') }}" type="text/css" media="all" />
        {% endblock %}
        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
       <div id="container">
            <div id="header">
                <div class="content">
                    <h1><a href="{{ path('bionic_university_hr_homepage') }}">
                            <img alt="HR Management" src="{{ asset('bundles/bionicuniversityhr/images/logo.jpg') }}" />
                        </a></h1>
                    <div id="sub_header">
                        <div class="post">
                            <h2>Find a teacher</h2>
                            <div>
                                <a href="{{ path('profile') }}">Create a profile</a>
                            </div>
                        </div>
 
                        <div class="search">
                            <h2>Find a teacher</h2>
                            <form action="" method="get">
                                <input type="text" name="keywords" id="search_keywords" />
                                <input type="submit" value="search" />
                                <div class="help">
                                    Enter some keywords (first name,second name,city ...)
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
 
           <div id="content">
               {% for flashMessage in app.session.flashbag.get('notice') %}
                   <div class="flash_notice">
                       {{ flashMessage }}
                   </div>
               {% endfor %}
 
               {% for flashMessage in app.session.flashbag.get('error') %}
                   <div class="flash_error">
                       {{ flashMessage }}
                   </div>
               {% endfor %}
 
               <div class="content">
                   {% block content %}
                   {% endblock %}
               </div>
           </div>
 
           <div id="footer">
               <div class="content">
                   <span class="symfony">

                           powered by <a href="http://www.symfony.com/">
                           <img src="{{ asset('bundles/bionicuniversityhr/images/symfony.gif') }}" alt="symfony framework" />
                       </a>
                   </span>
                   <ul>
                       <li><a href="">About HRManagement</a></li>
                       <li class="feed"><a href="">Full feed</a></li>
                   </ul>
               </div>
           </div>
       </div>
   </body>
</html>
